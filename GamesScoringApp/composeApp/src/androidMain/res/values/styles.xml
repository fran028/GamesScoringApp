<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- The Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- The background color of the loading screen -->
        <item name="windowSplashScreenBackground">#121212</item>

        <!-- The icon in the middle of the loading screen -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!-- Use a standard theme for after loading is finished -->
        <item name="postSplashScreenTheme">@android:style/Theme.Material.Light.NoActionBar</item>
    </style>
</resources>